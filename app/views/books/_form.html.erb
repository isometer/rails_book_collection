<table summary="Book form fields">
    <tr>
    <th>Title</th>
    <td><%= f.text_field(:title) %></td>
    </tr>

    <tr>
    <th>Author</th>
    <td><%= f.text_field(:author) %></td>
    </tr>

    <tr>
    <th>Price</th>
    <td><%= f.number_field(:price, step: 0.01, min: 0) %></td>
    </tr>

    <tr>
    <th>Published Date</th>
    <td><%= f.date_field(:published_date, value: Date.today.strftime("%m/%d/%Y")) %></td>
    </tr>
</table>
